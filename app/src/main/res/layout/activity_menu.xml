<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/cart_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/product_recycler_view"
        android:layout_below="@id/cart_textView"
        android:layout_above="@id/view_cart"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/view_cart"
        android:layout_above="@id/remove_all"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:onClick="viewCart"
        android:text="Show the Cart" >
    </Button>

    <Button
        android:id="@+id/remove_all"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:onClick="removeAll"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_alignParentBottom="true"
        android:text="Remove All Item" >
    </Button>
</RelativeLayout>
